{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true, // Generates .d.ts files for type distribution.
    "declarationMap": true, // Generates source maps for your .d.ts (declaration) files
    "emitDeclarationOnly": false, // Still need to generate JS for library export purposes
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
